<div class='container'>
  <% if current_user %>
    <div id='friends'>
      <h2>Friends</h2>

      <%= button_tag 'All Friends',  method: :get, action: '/truefriends', id: 'friendslistButton' %>   <%= button_tag 'Friend Requests',  method: :get, action: '/requests', id: 'friendrequestButton' %>

      <%= form_tag('/search', method: :get, id: 'search') do %>
        <%= text_field_tag :email, nil, placeholder: 'search by email' %>
        <%= submit_tag 'Search' %>
      <% end -%>

      <ul id='friendlist'><ul>
    </div>

    <div id='profile'>
      <div id='bio'>
        <h2>Your Bio</h2>
        <p contentEditable=true> <%= current_user.bio %> </p>

        <%= button_tag 'Save Change', method: :put, action: '/profile', id: 'bioEdit' %>

      </div>
      <div id='values'>
        <h2>Your values</h2>
        <p><%= your_values.map {|v|v.word}.join(', ') %></p>
      </div>
    </div>
  <% else %>
  <div class="main">
    <p id="introq">Where do you excel?
    </p>
    <div class="super-wrapper">
      <div class="charfil"><br>
      </div>
      <div class="char1"><br><br><br>
        STRONG!<br><br><br><br><br><br><br><br>FASHIONABLE!<br><br><br><br><br><br><br>KIND!
      </div>
      <div class="superman">
      </div>
      <div class="char2"><br><br><br>
        INTELLECTUAL!<br><br><br><br><br><br><br><br>PERSISTENT!<br><br><br><br><br><br><br>CHIPPER!
      </div><br>
    </div><br>
    <p class="intro">Trust the people who know you best, endorse your skills. Whether its programming or people skills, let the world know your strengths.
    </p>
  </div>
  <% end %>
</div>
