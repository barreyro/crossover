<div class='container'>
  <% if current_user %>
    <div id='profile'>
      <div id='bio'>
        <h2>About me:</h2>
        <p contentEditable=true> <%= current_user.bio %> </p>
        <%= button_tag 'Save Changes', method: :put, action: '/profile', id: 'bioEdit' %>
      </div>
      <div id='values'>
        <h2>Endorsements:</h2>
        <p><%= your_values.map {|v|v.word}.join(', ') %></p>
      </div>
    </div>
    <div id='friends'>
      <h2>Friends</h2>

      <%= button_tag 'My Friends',  method: :get, action: '/truefriends', id: 'friendslistButton' %>   <%= button_tag 'Friend Requests',  method: :get, action: '/requests', id: 'friendrequestButton' %>

      <%= form_tag('/search', method: :get, id: 'search') do %>
        <%= text_field_tag :email, nil, placeholder: 'search by email', class: 'searchBox' %>
        <%= submit_tag 'Search', class: 'searchButton' %>
      <% end -%>

      <ul id='friendlist'><ul>
    </div>

</div>
  <% else %>
  <div class="main">
    <p id="introq">Where do you excel?
    </p>
    <div class="super-wrapper">
      <div class="charfil"><br><br><br><br><Br>1. Connect with people who know you best.<br><Br>2. They endorse your people and programming skills. <br><br>3. Let the world know your strengths!
      </div>
      <div class="char1"><br><br><br>
        STRONG!<br><br><br><br><br><br><br><br>FASHIONABLE!<br><br><br><br><br><br><br>MAN OF HIS WORD!
      </div>
      <div class="superman">
      </div>
      <div class="char2"><br><br><br>
        INTELLECTUAL!<br><br><br><br><br><br><br><br>PERSISTENT!<br><br><br><br><br><br><br>JAVASCRIPT NINJA!
      </div><br>
    </div><br>
    <p class="intro">
    </p>
  </div>
  <% end %>
</div>
