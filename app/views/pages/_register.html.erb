<div class='userInfoCont'>
  <h4 id='userMsg'>Sign up here:</h4>
  <%= form_for :user, url: '/register', method: :post, id: 'registerBox' do |f| %>
    <span id='signupform'> <%= f.text_field :first_name, placeholder: 'First name' %> <%= f.text_field :last_name, placeholder: 'Last name' %></span>

    <%= f.text_field :email, placeholder: 'email' %>
    <%= f.text_field :password, placeholder: 'password', type: 'password' %><br>
    <%= f.submit 'Register', class: 'navbutton' %>
    <%= button_tag "Login",  action: '/login', method: :get, id: 'loginNow', class: 'navbutton'%>
  <% end %>


</div>
